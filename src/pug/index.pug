    title.
        zacharyrs
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(property="og:url", content="https://zacharyrs.me/")
    meta(property="og:type", content="website")
    meta(property="og:title", content="zacharyrs")
    meta(property="og:image", content="https://zacharyrs.me/assets/img/ogimage.jpg")

    style.
        #splash {
          display: block;
          position: absolute;
          top: 0;
          bottom: 0;
          left: 0;
          right: 0;
          background: url('/assets/img/crystal.jpg');
          background-size: cover;
          transition: transform 0.4s ease-in;
          transition-delay: 0.3s;
          will-change: opacity;
          z-index: 10;
          transform: translate3d(0, -100vh, 0);
        }
        #splash::before {
          content: '';
          position: absolute;
          top: 0;
          bottom: 0;
          left: 0;
          right: 0;
          background: url('/assets/img/svg/logo.svg') 50% 30% no-repeat;
          background-size: 40%;
        }
        #splash h2 {
          font-family: 'quicksand';
          color: white;
          text-align: center;
          width:  100vw;
          position: absolute;
          bottom: 20%;
        }
        body.loading #splash {
          transform: translate3d(0, 0, 0);
        }
        @media handheld, only screen and (max-width: 1080px) {
          #splash::before {
            background-size: 80%;
          }
        }

    //- Data
    link(rel="manifest", href="/assets/data/manifest.json")

    //- Fonts
    link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Quicksand", media="none", onload="if(media!='all')media='all'")

    //- Bower imports
    link(rel="stylesheet", type="text/css", href="bower/material-typography/css/typography.min.css")
