link(rel="import", href="../bower/polymer/polymer.html")
link(rel="import", href="../bower/iron-flex-layout/iron-flex-layout-classes.html")
link(rel="import", href="../bower/app-route/app-route.html")
link(rel="import", href="../bower/polymerfire/firebase-query.html")

link(rel="import", href="zacharyrs-blogbox.html")

link(rel="import", href="styles/zacharyrs-app.html")

dom-module#zacharyrs-user
  template
    style(is="custom-style", include="shared-styles iron-flex").
      .container {
        @apply(--layout-horizontal);
        @apply(--layout-wrap);
        margin: 0 2vw 0 2vw;
      }

      zacharyrs-blogbox {
        --width: calc(96vw / 3);
        --height: calc(96vw / 3);
      }

      @media handheld, only screen and (max-width: 1080px) {
        zacharyrs-blogbox {
          --width: calc(96vw / 2);
          --height: calc(96vw / 2);
        }
      }

      @media handheld, only screen and (max-width: 640px) {
        zacharyrs-blogbox {
          --width: calc(96vw / 1);
          --height: calc(96vw / 1);
        }
      }

      zacharyrs-blogbox.full {
        --width: calc(96vw);
        --height: calc(96vw);
      }

    app-route(
      route="{{route}}",
      pattern="/:userId",
      data="{{data}}"
    )
    firebase-query(
      id="userPinned",
      app-name="zacharyrs",
      path="/users/[[data.userId]]/pinned",
      order-by-child="content/order",
      data="{{pinned-data}}"
    )
    firebase-query(
      id="userAll",
      app-name="zacharyrs",
      path="/users/[[data.userId]]/posts",
      order-by-child="content/order",
      limit-to-first="12",
      data="{{blog-data}}"
    )
    section.container
      template(is="dom-repeat", items="[[pinned-data]]", as="post")
        template(is="dom-if", if="[[post.content.show]]")
          zacharyrs-blogbox.mini(post="[[post.content]]", on-open-post="_openPost", visible="[[visible]]")
      template(is="dom-repeat", items="[[blog-data]]", as="post")
        template(is="dom-if", if="[[post.content.show]]")
          zacharyrs-blogbox.mini(post="[[post.content]]", on-open-post="_openPost", visible="[[visible]]")
  script(type="text/javascript").
      'use strict';

      class UserPage {
          beforeRegister() {
              this.is = 'zacharyrs-user';
              this.properties = {
                  visible: {
                      type: Boolean,
                      value: false
                  },
                  data: {
                      type: Object,
                  }
              };
              this.observers = [
                  '_changedPage(data.userId)'
              ]
          }
          created() {}
          ready() {}
          attached() {}
          detached() {}
          attributeChanged() {}

          _changedPage(userId) {
              this.$.userAll.path = null;
              this.$.userPinned.path = null;
              this.$.userAll.path = '/users/' + this.data.userId + '/posts';
              this.$.userPinned.path = '/users/' + this.data.userId + '/pinned';
          }

          _openPost(e) {
              this.fire('open-post', {link: e.detail.link}, { bubbles: false });
          }
      }

      Polymer(UserPage);
