dom-module#shared-styles
  template
    style.
      :host {
        --theme-light: rgb(83, 134, 197);
        --theme-medium: rgb(74, 118, 174);
        --theme-dark: rgb(63, 102, 151);
        --theme-grey-light: rgb(245, 247, 250);
        --theme-grey-medium: rgb(170, 178, 189);
        --theme-grey-dark: rgb(67, 74, 84);
      }

      ::selection {
        background: rgba(63, 102, 151, 0.9);
        color: rgb(245, 247, 250);
      }

      h1, h2, h3, h4, h5, h6, h7, paper-tab{
        font-family: 'Quicksand';
      }

      h1 {
        font-size: 56px;
        font-weight: 100;
        letter-spacing: -0.005em;
        line-height: 56px;
        opacity: 0.54;
      }

      h2 {
        font-size: 56px;
        font-weight: 400;
        letter-spacing: -0.005em;
        line-height: 56px;
        opacity: 0.54;
      }

      h3 {
        font-size: 45px;
        font-weight: 400;
        line-height: 64px;
        opacity: 0.54;
      }

      h4 {
        font-size: 34px;
        font-weight: 400;
        line-height: 40px;
        opacity: 0.54;
      }

      h5 {
        font-size: 24px;
        font-weight: 400;
        line-height: 32px;
        opacity: 0.87;
      }

      h6 {
        font-size: 20px;
        font-weight: 500;
        letter-spacing: 0.005em;
        opacity: 0.87;
      }

      h7 {
        font-size: 16px;
        font-weight: 400;
        letter-spacing: 0.010em;
        line-height: 24px;
        opacity: 0.87;
      }

      span, p, caption, button, select, button, textarea, input, ol, ul {
        font-family: 'EB Garamond';
      }

      span {
        font-size: 14px;
        font-weight: 400;
        letter-spacing: 0.010em;
        line-height: 20px;
        opacity: 0.87;
      }

      p {
        font-size: 18px;
        font-weight: 500;
        letter-spacing: 0.010em;
        line-height: 24px;
        opacity: 0.87;
      }

      caption {
        font-size: 12px;
        letter-spacing: 0.020em;
        opacity: 0.54;
      }

      button {
        text-transform: uppercase;
        letter-spacing: 0.010em;
        opacity: 0.87;
      }

      select, button, textarea, input {
        font-size: 100%;
      }

      ol, ul {
        list-style: none;
      }

      blockquote, q {
        quotes: none;
      }

      blockquote:before, blockquote:after, q:before, q:after {
        content: '';
        content: none;
      }

      table {
        border-collapse: collapse;
        border-spacing: 0;
      }

      paper-tabs {
        color: var(--theme-grey-dark);
        --paper-tabs-selection-bar-color: var(--theme-light);
      }

      h1.logo {
        color: var(--theme-dark);
        text-align: center;
        width:  100vw;
        padding-top: 20px;
        opacity: 1;
      }

      .scrollbar-track, .scrollbar-track:hover {
        background: rgba(170, 178, 189, 0.4);
      }

      .scrollbar-track-y {
        right: 1px;
      }

      .scrollbar-thumb {
        background: var(--theme-medium);
      }

      @media screen and (min-width: 1080px) {
        zacharyrs-mobile-menu {
          display: none;
        }
      }

      @media screen and (max-width: 1080px) {
        app-header {
          display: none;
        }
      }