link(rel="import", href="../bower/neon-animation/neon-animation.html")

dom-module#zacharyrs-404
  template
    style(is="custom-style", include="shared-styles")
    div.
        This will be my 404 page.
  script(type="text/javascript").
      'use strict';

      class NotFoundPage {
          get behaviors() {
              return [Polymer.NeonAnimationRunnerBehavior];
          }

          beforeRegister() {
              this.is = 'zacharyrs-404';
              this.properties = {
                  visible: {
                      type: Boolean,
                      value: false
                  },
                  animationConfig: {
                      value: function() {
                          return {
                              'entry': [
                                  {
                                      name: 'fade-in-animation',
                                      node: this
                                  }
                              ],
                              'exit': [
                                  {
                                      name: 'fade-out-animation',
                                      node: this
                                  }
                              ]
                          }
                      }
                  }
              };
          }
          created() {}
          ready() {}
          attached() {}
          detached() {}
          attributeChanged() {}
      }

      Polymer(NotFoundPage);
