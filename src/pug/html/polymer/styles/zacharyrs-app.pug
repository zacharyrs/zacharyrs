dom-module#shared-styles
  template
    style.
      ::selection {
        background: rgba(61, 102, 152, 0.9);
        color: #F5F7FA;
      }

      app-header {
        width: 100%;
        height: 132px;
        color: #fff;
        transform: none !important;
        @apply(--layout-fixed-top);
        z-index: 1;
        background-color: rgba(255, 255, 255, 0.95);
        --app-header-shadow: {
          box-shadow: inset 0px 5px 6px -3px rgba(0, 0, 0, 0.2);
          height: 10px;
          bottom: -10px;
        };
      }

      paper-tabs {
        color: #656D78;
        --paper-tabs-selection-bar-color: #3D6698;
        margin: 0 20% 0 20%;
      }

      paper-tab {
        margin: 0 40px;
      }

      .logo {
        color: #3D6698;
        text-align: center;
        width:  100%;
        padding-top: 20px;
        font-weight: light;
      }

      :host {
        display: block;
        position: relative;
        padding-top: 142px;
        padding-bottom: 64px;
        min-height: 100vh;
      }

      app-toolbar {
        margin-bottom: 20px;
      }